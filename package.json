{
  "name": "bostadsvyn",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -fxd -e .env.local",
    "dev": "turbo dev",
    "knip": "with-env knip --config knip.config.ts",
    "lint": "biome check . && manypkg check ",
    "lint-fix": "biome check --write --unsafe --verbose . && manypkg fix && sort-package-json",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "up": "bunx npm-check-updates -ws --root --format group -u"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@manypkg/cli": "0.25.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/bun": "latest",
    "@types/node": "24.6.2",
    "knip": "5.64.1",
    "next-intl": "^4.3.9",
    "sort-package-json": "^3.4.0",
    "turbo": "2.5.8",
    "typescript": "5.9.3"
  },
  "packageManager": "bun@1.2.23",
  "engines": {
    "node": ">=22"
  },
  "module": "index.ts",
  "type": "module"
}
